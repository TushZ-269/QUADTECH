    <script>
        // Simple script for tab functionality in the news feed
        document.querySelectorAll('.news-tabs').forEach(tabsContainer => {
            tabsContainer.addEventListener('click', event => {
                if (event.target.classList.contains('tab-btn')) {
                    const newsItem = tabsContainer.closest('.news-item');
                    
                    // Deactivate all buttons and content in this news item
                    newsItem.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
                    newsItem.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

                    // Activate the clicked button
                    event.target.classList.add('active');
                    
                    // Activate the corresponding content
                    const targetId = event.target.getAttribute('data-target');
                    newsItem.querySelector(`#${targetId}`).classList.add('active');
                }
            });
        });
    </script>
